{
	"root": true,
	"env": {
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:import/recommended",
		"airbnb-base",
		"plugin:jest/recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"no-console": "off",
		"sort-imports": "off",
		"import/order": [
			"error",
			{
				"alphabetize": { "order": "asc" }
			}
		]
	},
	"ignorePatterns": ["/node_modules/", "/dist/"]
}
